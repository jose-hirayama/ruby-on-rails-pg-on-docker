<h1>ユーザ一覧</h1>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3"></th>
        <tr>
    </thead>
<% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.mail_address %></td>
            <td><%= link_to '削除', user, method: :delete, data: {confirm: '削除してもいいですか？' } %></td>
        </tr>
<% end %>
</table>

<br>

<%= link_to '新規登録', new_user_path %>