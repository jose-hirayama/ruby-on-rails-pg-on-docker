<h1>ユーザ登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= f.label :名前 %>
        <%= f.text_field :name %>

        <%= f.label :メールアドレス %>
        <%= f.email_field :mail_address %>

        <%= f.submit "登録" %>
    <% end %>
  </div>
</div>